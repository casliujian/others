
datatype day = Monday | Tuesday | Wednesday | Thursday | Friday | Saturday | Sunday

val x = 10
var y = 20
var z = 4

day_of_z z = 
    match z with
    | 1 -> Monday
    | 2 -> Tuesday
    | 3 -> Wednesday
    | 4 -> Thursday
    | 5 -> Friday
    | 6 -> Saturday
    | _ -> Sunday

is_sunday d = 
    d = Sunday

Model {
    init = 1
    transition s = 
        if s < 7 then s+1 else 1
    property reach_sunday = AF (x, is_sunday(day_of_z x), init)
}